<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE task PUBLIC "-//OASIS//DTD DITA Task//EN" "task.dtd">
<task id="task_view-data-retention-behav">
    <title>View the Data Retention Schedule</title>
    <shortdesc>View the schedule for data retention behavior on the <wintitle>Data
            Retention</wintitle> screen of the <wintitle>System Configuration</wintitle>
        page.</shortdesc>
    <taskbody>
        <context>
            <p>To see the configured data retention schedule:</p>
        </context>
        <steps>
            <step>
                <cmd>Open the <uicontrol>System Configuration</uicontrol> page, by clicking the
                        <uicontrol>System Configuration</uicontrol> icon in the left navigation bar.
                        <image
                        href="../../_common_source/_images/gui-screen-shots/icon_system-config.png"
                        id="image_svp_vkn_jq" scale="50"/></cmd>
                <info>The <wintitle>System Configuration</wintitle> page opens on the<wintitle>
                        Password Policy</wintitle> screen. <fig id="fig_password-policy">
                        <image href="../_images/gui-screen-shots/password-policy.png"
                            id="image_j4l_xkn_jq" scale="50"/>
                    </fig></info>
            </step>
            <step>
                <cmd>Click the <uicontrol>Data Retention</uicontrol> tab.</cmd>
                <info>The <wintitle>Data Retention</wintitle> page opens, showing the schedule for
                    automatic checking. <fig id="fig_data-retention">
                        <image
                            href="../../_common_source/_images/gui-screen-shots/data-retention.jpg"
                            id="image_fdj_ktf_xq" scale="50"/>
                    </fig></info>
            </step>
        </steps>
    </taskbody>
</task>
