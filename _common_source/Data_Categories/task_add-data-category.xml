<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE task PUBLIC "-//OASIS//DTD DITA Task//EN" "task.dtd">
<task id="task_add-data-category">
    <title>Add a Data Category</title>
    <shortdesc>Add a data category on the <wintitle>Data Categories</wintitle> screen of the
            <wintitle>System Configuration</wintitle> page.</shortdesc>
    <taskbody>
        <context>
            <p>To add a data category:</p>
        </context>
        <steps id="steps_dwd_rnx_kq">
            <step>
                <cmd>Open the <uicontrol>System Configuration</uicontrol> page, by clicking the
                        <uicontrol>System Configuration</uicontrol> icon in the left navigation bar.
                        <image href="../_images/gui-screen-shots/icon_system-config.png"
                        id="image_svp_vkn_jq" scale="50"/></cmd>
                <info>The <wintitle>System Configuration</wintitle> page opens on the<wintitle>
                        Password Policy</wintitle> screen.<fig id="fig_password-policy">
                        <image href="../_images/gui-screen-shots/password-policy.png"
                            id="image_j4l_xkn_jq" scale="50"/>
                    </fig></info>
            </step>
            <step>
                <cmd>Click the <uicontrol>Data Categories</uicontrol> tab.</cmd>
                <info>The <wintitle>Data Categories</wintitle> screen opens.<fig
                        id="fig_data-categories">
                        <image href="../_images/gui-screen-shots/data-categories.png"
                            id="image_mc5_xg4_mq" scale="50"/>
                    </fig></info>
            </step>
            <step>
                <cmd>Click the <uicontrol>New Category</uicontrol> button.</cmd>
                <info>
                    <p>The <wintitle>Data Categories</wintitle> screen expands to show the
                            <wintitle>Category Details</wintitle> area.</p>
                    <fig id="fig_data-category-details">
                        <image href="../_images/gui-screen-shots/data-categories_details.png"
                            id="image_smd_qh4_mq" scale="50"/>
                    </fig>
                </info>
            </step>
            <step>
                <cmd>Enter a name for the category. </cmd>
            </step>
            <step>
                <cmd>Save the data category by clicking the <uicontrol>Save Category</uicontrol>
                    button. </cmd>
            </step>
        </steps>
    </taskbody>
</task>
