<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE task PUBLIC "-//OASIS//DTD DITA Task//EN" "task.dtd">
<task id="task_change-your-password">
    <title>Change Your Password</title>
    <shortdesc>Change your password quickly by using the quick task buttons at the top of any
        screen.</shortdesc>
    <taskbody>
        <context>
            <p>To change your password:</p>
        </context>
        <steps>
            <step>
                <cmd>Locate the quick task buttons next to your username at the top right of the
                    screen.</cmd>
                <info>
                    <fig id="fig_quick-tasks">
                        <image href="../_images/gui-screen-shots/quick-tasks.JPG"
                            id="image_pcf_gfs_3q" scale="70"/>
                    </fig>
                </info>
            </step>
            <step>
                <cmd>Click <uicontrol>Change Password</uicontrol>. The <wintitle>Change
                        Password</wintitle> window opens.</cmd>
                <info><fig id="fig_change-password">
                        <image
                            href="../_images/gui-screen-shots/quick-tasks_change-your-password.JPG"
                            id="image_p3r_lzs_sq" scale="70"/>
                    </fig>The current password is represented by dots, but not shown in plain
                    text.</info>
            </step>
            <step>
                <cmd>Enter the new password in the <uicontrol>New Password</uicontrol> field. Retype
                    your new password in the <uicontrol>Confirm New Password</uicontrol>
                    field.</cmd>
            </step>
            <step>
                <cmd>Click the <uicontrol>Change</uicontrol> button to submit the change.</cmd>
            </step>
        </steps>
    </taskbody>
</task>
